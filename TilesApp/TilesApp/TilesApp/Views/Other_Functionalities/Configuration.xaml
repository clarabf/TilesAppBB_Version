<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             mc:Ignorable="d"
             xmlns:badge ="clr-namespace:Syncfusion.XForms.BadgeView;assembly=Syncfusion.SfBadgeView.XForms"
             x:Class="TilesApp.Views.Configuration">
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid BackgroundColor="#F0F0F0" x:Name="innerGrid" 
                Padding="30, 30, 30, 20"
                RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="0.6*" />
                </Grid.RowDefinitions>
                <Label 
                    TextColor = "Black"
                    FontAttributes="Bold"
                    Text="YOUR PROJECT"
                    FontSize="20"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"
                    CharacterSpacing="1.15"
                    Grid.Row="0"
                />
                <Label 
                    Grid.Row="1"
                    TextColor = "Black"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="You are currently working on project: " FontSize="Medium"/>
                            <Span Text="Test" FontAttributes="Bold" x:Name="lblProject" FontSize="Medium"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <combobox:SfComboBox
                    x:Name="projectDropdown"
                    Watermark="Change Project"
                    MultiSelectMode="None"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"
                    IsEditableMode="False"
                    DataSource="{Binding projectNames}"
                    Grid.Row="2"
                />
                <StackLayout Grid.Row="3" Orientation="Horizontal">
                    <CheckBox Color="Black" CheckedChanged="OnCheckBoxCheckedChanged"/>
                    <Label Text="Remember project" VerticalOptions="Center" TextColor="Black" FontSize="Small"/>
                </StackLayout>
                <badge:SfBadgeView 
                    x:Name="btBadge"
                    Grid.Row="5" 
                    BadgeText=""
                    BackgroundColor="Transparent"
                    HorizontalOptions="CenterAndExpand" 
                    VerticalOptions="EndAndExpand">
                    <badge:SfBadgeView.Content>
                        <Button
	                        x:Name="PendingOpts"
	                        Text="PENDING OPERATIONS"
	                        BackgroundColor="Transparent"
                            BorderColor="Transparent"
	                        FontFamily="{StaticResource CustomFont}"
	                        FontSize="15"
	                        Clicked="Pending_Command">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="TextColor" Value="Black" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="TextColor" Value="Gray" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Button>
                    </badge:SfBadgeView.Content>
                    <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSetting
                            x:Name="bdSettings"
                            BadgeType="None" 
                            BackgroundColor="Black"
                            BadgePosition="TopRight"
                            Offset="0,5"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>
                <BoxView
	                HeightRequest="1.5" 
	                WidthRequest="170"
	                Grid.Row="5"
                    Margin="0,0,10,5"
	                BackgroundColor="Black"                                 
	                VerticalOptions="EndAndExpand"
	                HorizontalOptions="CenterAndExpand"
                />
            </Grid>
            <StackLayout 
                x:Name="LoadingPopUp"
	            BackgroundColor="White"
                Opacity="0.5"
                IsVisible="False"
                AbsoluteLayout.LayoutBounds="0,0,1,1" 
                AbsoluteLayout.LayoutFlags="All"
                VerticalOptions="Fill" 
                HorizontalOptions="FillAndExpand">
                <ActivityIndicator 
			        x:Name="loading" 
			        VerticalOptions="EndAndExpand" 
			        HorizontalOptions="CenterAndExpand"
			        Color="Red"
			        IsRunning="False"/>
                <Label 
			        XAlign="Center"
			        TextColor="Black"
			        Text="Recovering elements.&#x0a;Please, wait..."
			        VerticalOptions="StartAndExpand" 
			        HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>